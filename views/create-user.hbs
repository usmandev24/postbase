<div class="max-w-xl mx-auto p-4 md:p-8">
  <div class="card bg-base-100 shadow-2xl border border-base-300">
    
    <div class="bg-primary text-primary-content p-6 rounded-t-2xl">
      <h2 class="card-title text-2xl font-bold">Create Account</h2>
      <p class="text-sm opacity-80">Join our community and start taking notes.</p>
    </div>

    <form class="card-body gap-3 p-6 md:p-8" method='POST' action='/users/create'>
      
      <div class=" w-full">
        <label class="label">
          <span class=" font-semibold">Username</span>
        </label>
        <div class="join w-full">
          <span class="join-item btn btn-square btn-ghost border-base-300 bg-base-200">@</span>
          <input type="text" name="username" placeholder="johndoe" 
                 class="input input-bordered w-full join-item focus:input-primary" required />
        </div>
      </div>

      <div class=" w-full">
        <label class="label">
          <span class=" font-semibold">Display Name (Full Name)</span>
        </label>
        <input type="text" name="fullName" placeholder="Johnathan Doe" 
               class="input input-bordered w-full focus:input-primary" required />
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div class="">
          <label class="label">
            <span class=" font-semibold">First Name</span>
          </label>
          <input type="text" name="firstName" placeholder="John" 
                 class="input input-bordered w-full focus:input-primary" />
        </div>
        <div class="">
          <label class="label">
            <span class=" font-semibold">Last Name</span>
          </label>
          <input type="text" name="lastName" placeholder="Doe" 
                 class="input input-bordered w-full focus:input-primary" />
        </div>
      </div>

      <div class=" w-full">
        <label class="label">
          <span class=" font-semibold">Email Address</span>
        </label>
        <input type="email" name="email" placeholder="john@example.com" 
               class="input input-bordered w-full focus:input-primary" required />
      </div>

      <div class=" w-full">
        <label class="label">
          <span class=" font-semibold">Password</span>
        </label>
        <div class="relative">
          <input type="password" name="password" placeholder="••••••••" 
                 class="input input-bordered w-full focus:input-primary pr-10" required />
          <div class="absolute inset-y-0 right-3 flex items-center opacity-50">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
        </div>
        <label class="label">
          <span class="text-base-content/50">Minimum 4 characters</span>
        </label>
      </div>

      <div class="card-actions flex-col mt-4">
        <button type="submit" class="btn btn-primary btn-block text-lg">
          Create My Account
        </button>
        <p class="text-center w-full mt-4 text-sm">
          Already have an account? 
          <a href="/login" class="link link-primary font-bold">Login here</a>
        </p>
      </div>

    </form>
  </div>
</div>