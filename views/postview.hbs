<div class="max-w-4xl w-full mx-auto p-4 md:p-8">

  {{#if post}}
  <div class="card  shadow-xl border border-base-300">
    <div class="card-body  p-4 md:p-10">

      <div class="flex  flex-row flex-wrap justify-between items-center gap-4 mb-6 border-b border-base-300 pb-4">

        <div class="flex  items-center gap-3">
          <div class="avatar">
            <div class="w-10 h-10 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
              <img src="/assets/users/photo/{{post.auther.username}}" alt="{{post.auther.username}}" />
            </div>
          </div>
          <div>
            <p class="font-bold text-lg leading-none">
              <a href="/users/profile/{{post.auther.username}}"
                class="link link-hover text-base-content">{{post.auther.username}}</a>
            </p>
            <p class="text-xs text-base-content/60 mt-1"> <span class="updatedAt font-mono">{{post.updatedAt}}</span></p>
          </div>
          <div class="sm:inline-flex hidden shrink gap-1">
          {{#each post.catgs}}
          <a class=" text-[0.8rem] rounded-full p-1 px-2 bg-base-200  text-info hover:bg-accent-content" href="/explore/{{catgName}}">{{catgName}}</a>
          {{/each}}
        </div>
        </div>
        
        {{#if postkey}}
        <div class="join">
          <a {{#if owner}}{{else}} hidden{{/if}} href="/posts/edit?key={{postkey}}" class="btn btn-sm btn-ghost join-item gap-2" title="Edit post">
            <span data-feather="edit" class=" h-4 w-4"></span>
            <span class="hidden sm:inline">Edit</span>
          </a>
          <button {{#if owner}}{{else}} hidden{{/if}} class="btn btn-sm btn-ghost text-error join-item gap-2" onclick="confirm_delete_modal.showModal()">
            <span data-feather="trash-2" class=" h-4 w-4"></span>
            <span class="hidden sm:inline">Delete</span>
          </button>
        </div>
        {{/if}}
        <div class="inline-flex sm:hidden shrink gap-1">
          {{#each post.catgs}}
          <a class=" text-[0.8rem] rounded-2xl p-1 px-2 bg-base-200 text-info hover:bg-accent-content" href="/explore/{{catgName}}">{{catgName}}</a>
          {{/each}}
        </div>
      </div>
     
      <article class="max-w-none">
        <h1 id="postTitle" class="text-3xl font-extrabold mb-4">{{post.title}}</h1>
        <div id="postBody" class="prose  text-lg text-base-content/90 leading-relaxed whitespace-pre-wrap">{{{post.body}}}</div>
      </article>

      <div class="divider mt-8"></div>
 
      <div class="flex justify-between items-center">
        <div class=" flex gap-2  sm:gap-4 text-sm  ">
          <button data-postkey="{{post.key}}" class="like-btn btn btn-ghost btn-sm gap-2 text-success">

              <span id="{{post.key}}-likes">{{post._count.likes}}</span>
              <span id="{{post.key}}-likeLogo" data-feather="thumbs-up" class=" transition-colors duration-200 h-4 w-4"></span>
              <span hidden class=" btn-active fill-primary"></span>
            </button>
            <button disabled class="comment-btn btn btn-ghost btn-sm gap-2 text-info">
              <span id="commentsLength">{{post._count.comments}}</span>
              <span data-feather="message-circle" class=" h-4 w-4"></span>

            </button>
        </div>
      </div>

    </div>
  </div>

  <div class="mt-6 space-y-4">
    <div class=" flex flex-row justify-between">
      <h3  class="text-xl font-bold px-1">Comments</h3>
      <button {{#if user}} {{else}} disabled {{/if}} class="btn btn-sm sm:btn-md btn-primary gap-2"
          onclick="comment_modal.showModal()">
          <span data-feather="message-circle" class=" h-5 w-5"></span>
          Add Comment
        </button>
    </div>
    
    <div id="liveComments" class=" p-0 flex flex-col-reverse justify-start items-start gap-4"></div>
    {{#if post.comments}}
    {{#each post.comments}}
    <div id="comment_{{id}}" class=" p-2 rounded-2xl bg-base-200">
      <div class=" flex justify-between">
        <div class=" flex justify-start gap-2 items-center">
          <img class=" rounded-full bg-black w-6 h-6" src="/assets/users/photo/{{auther.username}}">
          <p class=" flex flex-col justify-center items-start">
            <span class=" text-sm">{{auther.username}}</span>
            <span class="updatedAt opacity-70 text-sm">{{createdAt}}</span>
          </p>
        </div>
        <div>
          <button  id="comment_{{id}}_delete" onclick="fetch('/posts/comment/destroy/{{id}}')" class=" btn btn-ghost  opacity-80 text-error"><span class=" w-4 h-4" data-feather="trash-2"></span></button>
        </div>
      </div>
      <p class=" text-lg p-2 pl-4">{{body}}</p>
    </div>
    {{/each}}
    {{else}}
    <div class=" p-8 text-center text-base-content/50 bg-base-200/50 rounded-xl">
      No comments yet. Be the first to share your thoughts!
    </div>
    {{/if}}
  </div>

  {{else}}
  <div class="alert alert-error shadow-lg max-w-md mx-auto mt-10">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <div>
      <h3 class="font-bold">Error!</h3>
      <div class="text-xs">post not found or key is missing.</div>
    </div>
    <a href="/" class="btn btn-sm">Go Home</a>
  </div>
  {{/if}}

</div>
<dialog id="confirm_delete_modal" class=" modal modal-bottom sm:modal-middle">
  <div class=" modal-box">
    <h2 class=" font-bold text-lg">Confirm Deletion</h2>
    <p class=" text-warning">Do you want to permanently delete <strong>{{post.title}}</strong> and all comments in it?
    </p>
    <div class=" modal-action">
      <button class="btn btn-primary" onclick="confirm_delete_modal.close()">Cancel</button>
      <button class=" btn btn-warning"
        onclick="delete_post_modal.showModal(); confirm_delete_modal.close()">confirm</button>
    </div>
  </div>
  <form class=" modal-backdrop" method="dialog">

  </form>
</dialog>

<dialog id="delete_post_modal" class=" modal modal-bottom sm:modal-middle">
  <div class=" modal-box">
    <h2 class=" font-bold text-lg">Permanently Delete </h2>
    <p class="">This will permanently delete <span class=" font-bold px-1">{{post.title}}</span> and all comments in it.
      <span class=" text-warning">⚠️ This cannot be undone</span>
    </p>
    <form class="" method="post" action="/posts/destroy/confirm">
      <div class=" modal-action">
        <input type="hidden" name="postkey" value="{{post.key}}">
        <button type="button" class="btn btn-primary" onclick="delete_post_modal.close()">Cancel</button>
        <button type="submit" class=" btn btn-error">Delete Permanently</button>
      </div>
    </form>

  </div>
  <form class=" modal-backdrop" method="dialog">

  </form>
</dialog>

<dialog id="comment_modal" class="modal modal-bottom sm:modal-middle">
  <div class="modal-box">
    <h3 class="font-bold text-lg">Add a Comment</h3>
    <p class="py-4 text-sm opacity-70">Replying to: <span class="font-bold">{{post.title}}</span></p>

    <form id="commentForm" >
      <input type="hidden" name="postkey" value="{{postkey}}">
      <input type="hidden" name="autherId" value="{{user.id}}">
      <div class=" w-full">
        <textarea id="commentText" name="commentBody" class="textarea textarea-bordered h-24 w-full"
          placeholder="Type your thoughts here..." required></textarea>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="comment_modal.close()">Cancel</button>
        <button type="submit" class="btn btn-primary" onclick="comment_modal.close()">Post Comment</button>
      </div>
    </form>
  </div>

  <form method="dialog" class="modal-backdrop">
  </form>
</dialog>
<script>
  const commentForm = document.getElementById('commentForm');
  const commentText = document.getElementById("commentText");
  const liveComments = document.getElementById("liveComments");
  const postBody = document.getElementById("postBody")
  const ws = new WebSocket("{{wsURL}}")
  ws.addEventListener("message", event => {
    const data = JSON.parse(event.data);
    if (data.type === 'connection') {
      console.log(data)
    } 
    else if (data.type === 'commentcreated' && data.postkey === "{{postkey}}") {
      const commentdiv = document.createElement("div");
      const comment = data.comment;
      const commentsLength = document.getElementById("commentsLength")
      commentdiv.id = "comment_"+ comment.id;
      commentdiv.className = "p-2 rounded-2xl bg-base-200 w-full"
      commentdiv.innerHTML = `
      <div class=" flex justify-between">
        <div class=" flex justify-start gap-2 items-center">
          <img class=" rounded-full bg-black w-6 h-6" src="/assets/users/photo/${comment.auther.username}">
          <p class=" flex flex-col justify-center items-start">
            <span class=" text-sm">${comment.auther.username}</span>
            <span class=" opacity-70 text-sm">${toRelativeTime(new Date(comment.createdAt))}</span>
          </p>
        </div>
        <div>
          <button onclick="fetch('/posts/comment/destroy/${comment.id}')" class=" btn btn-ghost  opacity-80 text-error">⛔</button>
        </div>
      </div>
      <p class=" text-lg p-2 pl-4">${comment.body}</p>
      `;
      commentsLength.textContent = Number(commentsLength.textContent) + 1;
      liveComments.appendChild(commentdiv)
    } else if ( data.type === "postupdated" && data.post.key === "{{postkey}}" ) {
      const postTitle = document.getElementById("postTitle");
      postTitle.textContent = data.post.title
      postBody.innerHTML = data.post.body
    } else if (data.type === "commentdestroyed" && data.postkey === "{{postkey}}") {
      const commentdiv = document.getElementById("comment_"+ data.id);
      commentdiv.remove()
    }
  })
  commentForm.addEventListener("submit", (event) => {
    event.preventDefault()
    if (ws.readyState === ws.OPEN) {
      ws.send(JSON.stringify({
        type: "createcomment",
        body: {
          postkey: "{{postkey}}",
          autherId: "{{user.id}}",
          commentBody: commentText.value
        }
      }))
    }
  })
  const timeDivs = document.querySelectorAll(".updatedAt");
  const defaultTimes = [];
  timeDivs.forEach(div => {
    defaultTimes.push(div.textContent)
    div.textContent = toRelativeTime(new Date(div.textContent))
  })
  const updateTime = setInterval(() => {
    const timeDivs = document.querySelectorAll(".updatedAt");
    Array.from(timeDivs).forEach((div, i) => {
      div.textContent = toRelativeTime(new Date(defaultTimes[i]))
    })
  }, 1000 * 30)
  window.addEventListener("beforeunload", () => {
    clearInterval(updateTime)
  })
  {{#if user }}
  class LikesControl {
    constructor() {
      this.likeButtons = document.querySelectorAll(".like-btn")
      console.log(this.likeButtons)
    }
    async init() {
      await this.setLikes()
      this.attachEvents()
    }
    async setLikes() {
      const res = await fetch('/users/likes/keys').then(async res => await res.text())
      if (!res) return
      const likeKeys = JSON.parse(res);
      Array.from(this.likeButtons).forEach(btn => {
        const postkey = btn.getAttribute("data-postkey")
        if (likeKeys.includes(postkey)) {
          btn.className = "like-btn btn btn-ghost btn-sm gap-2 text-primary";
          btn.setAttribute("data-isliked", "true");
          document.getElementById(postkey + "-likeLogo").setAttribute("class", "fill-primary h-4 w-4 ")
        }
      })

    }
    attachEvents() {
      Array.from(this.likeButtons).forEach((btn, i) => {
        btn.addEventListener("click", async (event) => {
          const postkey = btn.getAttribute("data-postkey")
          const userId = "{{user.id}}";

          if (btn.getAttribute("data-isliked") === "true") {
            const postkey = btn.getAttribute("data-postkey")
            const userId = "{{user.id}}";
            
            btn.disabled = true;
            btn.classList.replace("btn-ghost","btn-active")
            try {
              const res = await this.fetchApi("/posts/likes/destroy", "POST", JSON.stringify({
                postkey: postkey,
                userId: userId
              }))
              if (res === "Ok") {
                this.toUnLiked(btn, postkey)
              }
            } catch (err) {
              console.error(err)
            } finally {
              setTimeout(() => {
              btn.disabled = false
            }, 500)
            }
          } else {
            const postkey = btn.getAttribute("data-postkey")
            const userId = "{{user.id}}";

            btn.classList.replace("btn-ghost","btn-active")
            btn.disabled = true;
            try {
              const res = await this.fetchApi("/posts/likes/add", "POST", JSON.stringify({
                postkey: postkey,
                userId: userId
              }))
              if (res === "Ok") {
                this.toLiked(btn, postkey)
              }
            } catch (err) {
              console.error(err)
            } finally {
              setTimeout(() => {
              btn.disabled = false
            }, 500)
            }
          }
        })
      })
    }
    async fetchApi(url, method, body) {
      const res = await fetch(url, {
        body,
        method,
        headers: { "content-type": "application/json" }
      })
      return await res.text()
    }
    toLiked(btn, postkey) {
      btn.setAttribute("data-isliked", "true")
      btn.className = "like-btn btn btn-ghost btn-sm gap-2 text-primary";
      let totalLikes = document.getElementById(postkey + "-likes").textContent
      document.getElementById(postkey + "-likes").textContent = Number(totalLikes) + 1;
      document.getElementById(postkey + "-likeLogo").setAttribute("class", "h-4 w-4 fill-primary")
    }
    toUnLiked(btn, postkey) {
      btn.setAttribute("data-isliked", "false")
      btn.className = "like-btn btn btn-ghost btn-sm gap-2 text-success";
      document.getElementById(postkey + "-likes").textContent -= 1;
      document.getElementById(postkey + "-likeLogo").setAttribute("class", "h-4 w-4")

    }

  }
  window.addEventListener("load", () => {
    new LikesControl().init()
  })
{{/if}}
</script>