<div class="max-w-3xl mx-auto p-4 md:p-8">

  {{#if note}}
  <div class="card bg-base-100 shadow-xl border border-base-300">
    <div class="card-body p-6 md:p-10">

      <div class="flex flex-row justify-between items-center gap-4 mb-6 border-b border-base-200 pb-4">

        <div class="flex items-center gap-3">
          <div class="avatar">
            <div class="w-10 h-10 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
              <img src="/users/photo/{{note.auther.username}}" alt="{{note.auther.username}}" />
            </div>
          </div>
          <div>
            <p class="font-bold text-lg leading-none">
              <a href="/profile/{{note.auther.username}}"
                class="link link-hover text-base-content">{{note.auther.username}}</a>
            </p>
            <p class="text-xs text-base-content/60 mt-1">Key: <span class="font-mono">{{notekey}}</span></p>
          </div>
        </div>

        {{#if notekey}}
        <div class="join">
          <a href="/notes/edit?key={{notekey}}" class="btn btn-sm btn-ghost join-item gap-2" title="Edit Note">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            <span class="hidden sm:inline">Edit</span>
          </a>
          <button class="btn btn-sm btn-ghost text-error join-item gap-2" onclick="confirm_delete_modal.showModal()">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            <span class="hidden sm:inline">Delete</span>
          </button>
        </div>
        {{/if}}
      </div>

      <article class="prose max-w-none">
        <h1 id="noteTitle" class="text-3xl font-extrabold text-accent mb-4">{{note.title}}</h1>
        <p id="noteBody" class="text-lg text-base-content/90 leading-relaxed whitespace-pre-wrap">{{note.body}}</p>
      </article>

      <div class="divider mt-8"></div>

      <div class="flex justify-between items-center">
        <div class="text-sm opacity-70">
          <span class="font-bold">0</span> Comments
        </div>

        <button {{#if user}} {{else}} disabled {{/if}} class="btn btn-primary gap-2"
          onclick="comment_modal.showModal()">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 8 9 8z" />
          </svg>
          Add Comment
        </button>
      </div>

    </div>
  </div>

  <div class="mt-6 space-y-4">

    <h3  class="text-xl font-bold px-1">Comments</h3>
    <div id="liveComments" class=" p-0 flex flex-col-reverse justify-start items-start gap-4"></div>
    {{#if note.comments}}
    {{#each note.comments}}
    <div id="comment_{{id}}" class=" p-2 rounded-2xl bg-base-200">
      <div class=" flex justify-between">
        <div class=" flex justify-start gap-2 items-center">
          <img class=" rounded-full bg-black w-6 h-6" src="/users/photo/{{auther.username}}">
          <p class=" flex flex-col justify-center items-start">
            <span class=" text-sm">{{auther.username}}</span>
            <span class=" opacity-70 text-sm">{{createdAt}}</span>
          </p>
        </div>
        <div>

        </div>
      </div>
      <p class=" text-lg p-2 pl-4">{{body}}</p>
    </div>
    {{/each}}
    {{else}}
    <div class=" p-8 text-center text-base-content/50 bg-base-200/50 rounded-xl">
      No comments yet. Be the first to share your thoughts!
    </div>
    {{/if}}
  </div>

  {{else}}
  <div class="alert alert-error shadow-lg max-w-md mx-auto mt-10">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <div>
      <h3 class="font-bold">Error!</h3>
      <div class="text-xs">Note not found or key is missing.</div>
    </div>
    <a href="/" class="btn btn-sm">Go Home</a>
  </div>
  {{/if}}

</div>
<dialog id="confirm_delete_modal" class=" modal modal-bottom sm:modal-middle">
  <div class=" modal-box">
    <h2 class=" font-bold text-lg">Confirm Deletion</h2>
    <p class=" text-warning">Do you want to permanently delete <strong>{{note.title}}</strong> and all comments in it?
    </p>
    <div class=" modal-action">
      <button class="btn btn-primary" onclick="confirm_delete_modal.close()">Cancel</button>
      <button class=" btn btn-warning"
        onclick="delete_note_modal.showModal(); confirm_delete_modal.close()">confirm</button>
    </div>
  </div>
  <form class=" modal-backdrop" method="dialog">

  </form>
</dialog>

<dialog id="delete_note_modal" class=" modal modal-bottom sm:modal-middle">
  <div class=" modal-box">
    <h2 class=" font-bold text-lg">Permanently Delete </h2>
    <p class="">This will permanently delete <span class=" font-bold px-1">{{note.title}}</span> and all comments in it.
      <span class=" text-warning">⚠️ This cannot be undone</span>
    </p>
    <form class="" method="post" action="/notes/destroy/confirm">
      <div class=" modal-action">
        <input type="hidden" name="notekey" value="{{note.key}}">
        <button type="button" class="btn btn-primary" onclick="delete_note_modal.close()">Cancel</button>
        <button type="submit" class=" btn btn-error">Delete Permanently</button>
      </div>
    </form>

  </div>
  <form class=" modal-backdrop" method="dialog">

  </form>
</dialog>

<dialog id="comment_modal" class="modal modal-bottom sm:modal-middle">
  <div class="modal-box">
    <h3 class="font-bold text-lg">Add a Comment</h3>
    <p class="py-4 text-sm opacity-70">Replying to: <span class="font-bold">{{note.title}}</span></p>

    <form id="commentForm" >
      <input type="hidden" name="notekey" value="{{notekey}}">
      <input type="hidden" name="autherId" value="{{user.id}}">
      <div class=" w-full">
        <textarea id="commentText" name="commentBody" class="textarea textarea-bordered h-24 w-full"
          placeholder="Type your thoughts here..." required></textarea>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="comment_modal.close()">Cancel</button>
        <button type="submit" class="btn btn-primary" onclick="comment_modal.close()">Post Comment</button>
      </div>
    </form>
  </div>

  <form method="dialog" class="modal-backdrop">
  </form>
</dialog>
<script>
  const commentForm = document.getElementById('commentForm');
  const commentText = document.getElementById("commentText");
  const liveComments = document.getElementById("liveComments");
  const noteBody = document.getElementById("noteBody")
  const ws = new WebSocket("ws://localhost:3000")
  ws.addEventListener("message", event => {
    const data = JSON.parse(event.data);

    if (data.type === 'connection') {
      console.log(data.message);
    } 
    else if (data.type === 'commentcreated' && data.notekey === "{{notekey}}") {
      const commentdiv = document.createElement("div");
      const comment = data.comment
      commentdiv.id = "comment_"+ comment.id;
      commentdiv.className = "p-2 rounded-2xl bg-base-200 w-full"
      commentdiv.innerHTML = `
      <div class=" flex justify-between">
        <div class=" flex justify-start gap-2 items-center">
          <img class=" rounded-full bg-black w-6 h-6" src="/users/photo/${comment.auther.username}">
          <p class=" flex flex-col justify-center items-start">
            <span class=" text-sm">${comment.auther.username}</span>
            <span class=" opacity-70 text-sm">${comment.createdAt}</span>
          </p>
        </div>
        <div>

        </div>
      </div>
      <p class=" text-lg p-2 pl-4">${comment.body}</p>
      `;
      liveComments.appendChild(commentdiv)
    } else if ( data.type === "noteupdated" && data.note.key === "{{notekey}}" ) {
      const noteTitle = document.getElementById("noteTitle");
      noteTitle.textContent = data.note.title
      noteBody.textContent = data.note.body
    }
  })
  commentForm.addEventListener("submit", (event) => {
    event.preventDefault()
    if (ws.readyState === ws.OPEN) {
      ws.send(JSON.stringify({
        type: "createcomment",
        body: {
          notekey: "{{notekey}}",
          autherId: "{{user.id}}",
          commentBody: commentText.value
        }
      }))
    }
  })
</script>