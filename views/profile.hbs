<div class=" p-8 m-auto max-w-4xl bg-base-100">
  <div class="">
    <img id="photo" class="m-auto bg-pink-300 dark:bg-black w-30 h-30 rounded-full" src="/assets/users/photo/{{publicUser.username}}">
    <h1 class="p-4 text-center text-2xl"> {{publicUser.displayName}}</h1>
    <div class="  mt-4 p-4 rounded-lg ">
      <h2 class=" text-xl p-1">Acount info</h2>
      <p class="p-2 border-b dark:border-b-gray-600 border-b-gray-400  sm:grid grid-cols-2">username <span
          class="text-lg  block font-semibold  ">{{publicUser.username}}</span></p>
      <p class="p-2 border-b dark:border-b-gray-600 border-b-gray-400 sm:grid grid-cols-2">Provider <span
          class="text-lg block font-semibold">{{publicUser.provider}}</span></p>
    
    </div>
  </div>
</div>
<div class="max-w-3xl w-full mx-auto p-4 md:p-6">
  <h2 class=" text-3xl font-bold text-center p-6 pt-0">Public OpenNotes</h2>
  {{#if notelist}}
  <div id="notelist" class="flex flex-col gap-6">
    {{#each notelist}}

    <div id="{{key}}" class="card bg-base-100 shadow-xl border border-base-300 transition-all hover:shadow-2xl">
      <div class="card-body p-6">
        
        <div class="flex items-center justify-between mb-2">
          <div class="flex items-center gap-3">
            <div class="avatar placeholder">
              <div class="">
                <img class="bg-purple-300 rounded-full dark:bg-neutral w-10 h-10" src="/assets/users/photo/{{auther.username}}">
              </div>
            </div>
            <div class="flex flex-col">
              <span class="font-bold text-base">{{auther.username}}</span>
              <span class="text-xs text-base-content/60">{{updatedAt}}</span> 
            </div>
          </div>
          <span id="{{key}}-info" class="badge badge-ghost badge-sm"></span>
        </div>

        <a id="{{key}}-link" href="/notes/view?key={{key}}" class="group block space-y-2">
          <h2 id="{{key}}-title" class="card-title text-2xl group-hover:text-primary transition-colors">
            {{title}}
          </h2>
          <p id="{{key}}-body" class="text-base-content/80 text-lg leading-relaxed">
            {{body}}
          </p>
        </a>

        <div class="card-actions justify-between items-center mt-4 pt-4 border-t border-base-200">
          <div class="flex gap-4">
            <button class="btn btn-ghost btn-sm gap-2 text-success">
              
              <span id="{{key}}-likes">0</span>
              <span data-feather="thumbs-up" class=" h-4 w-4"></span>
            </button>
            <button class="btn btn-ghost btn-sm gap-2 text-info">
              <span id="{{key}}-comments">{{commentsLength}}</span>
              <span data-feather="message-circle" class=" h-4 w-4"></span>
              
            </button>
          </div>
        </div>
      </div>
    </div>

    {{/each}}
  </div>
  {{/if}}
</div>

