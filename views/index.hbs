<div class="p-4 list w-full max-w-2xl m-auto bg-base-100 rounded-box shadow-2xl">
  {{#each notelist}}
  <div class=" collapse collapse-arrow bg-base-200 m-1">
    <input type="radio" name="note">
    <div class=" collapse-title">
      <a class="text-xl p-1 text-primary " href="/notes/view?key={{key}}">{{title}}</a>

    </div>
    <div class=" collapse-content">

      <div class=" flex flex-row justify-end gap-4">
        <a class="  tooltip" data-tip=" view external "
          href="/notes/view?key={{key}}"><span class=" h-5" data-feather="external-link"></span></a>
        <a class="tooltip" data-tip=" Edit "
          href="/notes/edit?key={{key}}"><span class=" h-5" data-feather="edit"></span></a>
        <a class="tooltip mr-4" data-tip=" Destroy " href="/notes/destroy?key={{key}}"><span
            data-feather="archive" class="h-5"></span></a>
        
      </div>
      <div class=" bg-base-300 text-balance text-secondary text-[1.1rem] mt-2 p-3 rounded-[.5rem]">
        {{body}}
      </div>
    </div>
  </div>
  {{/each}}
  
</div>