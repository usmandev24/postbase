<div class="max-w-4xl w-full mx-auto p-4 md:p-6">

  {{#if notelist}}
  <div id="notelist" class="flex flex-col gap-6">
    {{#each notelist}}

    <div id="{{key}}" class="card  shadow-xl border border-base-300 transition-all hover:shadow-2xl">
      <div class="card-body p-6">

        <div class="flex items-center justify-between mb-2">
          <div class="flex items-center gap-3">
            <div class="avatar placeholder">
              <div class="">
                <img class="bg-purple-300 rounded-full dark:bg-neutral w-10 h-10"
                  src="/assets/users/photo/{{auther.username}}">
              </div>
            </div>
            <div class="flex flex-col">
              <span class="font-bold text-base">{{auther.username}}</span>
              <span class="text-xs text-base-content/60">{{updatedAt}}</span>
            </div>
          </div>
          <span id="{{key}}-info" class="badge badge-ghost badge-sm"></span>
        </div>

        <a id="{{key}}-link" href="/notes/view?key={{key}}" class="group block space-y-2">
          <h2 id="{{key}}-title" class="card-title text-2xl group-hover:text-primary transition-colors">
            {{title}}
          </h2>
          <div id="{{key}}-body" class=" prose max-h-[30vh] overflow-clip">
            {{{body}}}
          </div>
        </a>

        <div class="card-actions justify-between items-center mt-4 pt-4 border-t border-base-200">
          <div class="flex gap-4">
            <button class="btn btn-ghost btn-sm gap-2 text-success">

              <span id="{{key}}-likes">0</span>
              <span data-feather="thumbs-up" class=" h-4 w-4"></span>
            </button>
            <button class="btn btn-ghost btn-sm gap-2 text-info">
              <span id="{{key}}-comments">{{commentsLength}}</span>
              <span data-feather="message-circle" class=" h-4 w-4"></span>

            </button>
          </div>
        </div>
      </div>
    </div>

    {{/each}}
  </div>

  {{else}}
  <div id="notelist" class="flex flex-col gap-6"></div>
  <div id="emptydiv" class="text-center py-20">
    <h1 class="text-3xl font-bold mb-4 opacity-70">No Notes Added Yet</h1>
    <a class="btn btn-primary btn-wide" href="/notes/add">Create First Note</a>
  </div>
  {{/if}}
</div>

<script>
  const notelist = document.getElementById('notelist');
  const emptyDiv = document.getElementById('emptydiv'); // Reference to hide this if a note comes in
  const ws = new WebSocket("ws://localhost:3000")
  ws.addEventListener("message", (event) => {
    const data = JSON.parse(event.data);
    if (data.type === 'connection') {
      console.log(data.message);
    } else if (data.type === 'notecreated') {
      // 1. Hide empty div if it exists
      if (emptyDiv) emptyDiv.style.display = 'none';

      // 2. Create the wrapper
      const noteDiv = document.createElement('div');
      noteDiv.id = data.note.key;
      // Matches the CSS of the Handlebars loop above
      noteDiv.className = "card bg-base-100 shadow-xl border border-base-300 transition-all hover:shadow-2xl";

      // 3. Construct HTML (Matches structure above)
      // Note: Added safe checks for data.note properties
      const username = data.note.auther ? data.note.auther.username : 'User';


      noteDiv.innerHTML = `
        <div class="card-body p-6">
          <div class="flex items-center justify-between mb-2">
            <div class="flex items-center gap-3">
              <div class="avatar placeholder">
                 <div class="">
                <img class="bg-purple-300 rounded-full dark:bg-neutral w-10 h-10" src="/assets/users/photo/${username}">
              </div>
              </div>
              <div class="flex flex-col">
                <span class="font-bold text-base">${username}</span>
                <span class="text-xs text-base-content/60">Just now</span> 
              </div>
            </div>
            <span id="${data.note.key}-info" class="badge badge-accent badge-sm">New</span>
          </div>

          <a id="${data.note.key}-link" href="/notes/view?key=${data.note.key}" class="group block space-y-2">
            <h2 id="${data.note.key}-title" class="card-title text-2xl group-hover:text-primary transition-colors">
              ${data.note.title}
            </h2>
            <p id="${data.note.key}-body" class="text-base-content/80 text-lg leading-relaxed">
              ${data.note.body}
            </p>
          </a>

          <div class="card-actions justify-between items-center mt-4 pt-4 border-t border-base-200">
             <div class="flex gap-4">
                <button class="btn btn-ghost btn-sm gap-2 text-success">
                  <span id="${data.note.key}-likes">0</span>
                  <span data-feather="thumbs-up" class=" h-4 w-4"></span>
                </button>
                <button class="btn btn-ghost btn-sm gap-2 text-info">
                  <span id="${data.note.key}-comments">0</span>
                  <span data-feather="message-circle" class=" h-4 w-4"></span>
                </button>
             </div>
          </div>
        </div>
      `;
      // Prepend to top of list (social feeds usually show newest first)
      notelist.prepend(noteDiv);
    } else if (data.type === 'notedestroyed') {
      const noteCard = document.getElementById(data.key);
      const noteInfo = document.getElementById(data.key + "-info");
      const noteLink = document.getElementById(data.key + "-link");

      if (noteCard && noteLink) {
        // Disable link
        noteLink.onclick = (event) => event.preventDefault();
        noteLink.removeAttribute("href");

        // Visual updates to look "Deleted"
        noteCard.classList.add("opacity-50", "grayscale", "cursor-not-allowed");

        if (noteInfo) {
          noteInfo.textContent = "Deleted";
          noteInfo.className = "badge badge-error badge-sm";
        }
      }
    } else if (data.type === "commentcreated") {
      const cSpan = document.getElementById(data.notekey + "-comments")
      cSpan.textContent = Number(cSpan.textContent) + 1;
      const infoSpan = document.getElementById(`${data.notekey}-info`)
      infoSpan.textContent = "New Comment"

    } else if (data.type === "commentdestroyed") {
      const cSpan = document.getElementById(data.notekey + "-comments")
      cSpan.textContent = Number(cSpan.textContent) - 1;
      const infoSpan = document.getElementById(`${data.notekey}-info`)
      infoSpan.textContent = "Comment deleted"

    } else if (data.type === "noteupdated") {
      const infoSpan = document.getElementById(`${data.note.key}-info`)
      infoSpan.textContent = "Updated"
    }
  });
</script>