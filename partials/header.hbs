<div class=" fixed top-0 z-50 max-w-[720px] navbar bg-base-300 text-base-content rounded-t-2xl">
  <div class="navbar-start gap-2 align-middle">
    <a class="btn btn-ghost  tooltip tooltip-bottom" data-tip=" Home " href="/"><i data-feather="home"></i></a>
    <h1 class="text-md sm:text-xl">{{title}}</h1>
  </div>
  {{#if user}}
  <div class="navbar-end hidden sm:inline-flex">
    <p>
      <a class="btn rounded-2xl w-max" href="/users/about-user"><span id="dp" class="flex justify-center items-center bg-pink-200 dark:bg-neutral rounded-full w-8 h-8 ">{{#if
          user.photo}}<img class="rounded-full" src="/users/photo?username={{user.username}}" alt="">
          {{else}}
          {{user.username}}
          {{/if}}
        </span>{{user.username}}</a>
    </p>
    <p class="">
      <a class="btn  btn-primary ml-1" href="/notes/add">ADD Note</a>
    </p>
  </div>
  {{else }}
  <div class=" navbar-end hidden sm:inline-flex">
    <a class="btn btn-outline rounded-full text-primary  " href="/users/login">Login</a>
  </div>
  {{/if}}
  <div class="navbar-end dropdown dropdown-end dropdown-bottom sm:hidden">
    <div role="button" tabindex="0" class="btn btn-ghost"><span data-feather="menu"></span></div>
    {{#if user}}
    <div tabindex="-1" class="dropdown-content mt-4 bg-base-300 rounded-box z-1  p-3 shadow-sm">
      <p>
        <a class="btn rounded-2xl w-full" href="/users/about-user"><span id="dp1" class="flex justify-center items-center bg-pink-200 dark:bg-neutral rounded-full w-8 h-8 ">{{#if
          user.photo}}<img class="rounded-full" src="/users/photo?username={{user.username}}" alt="">
          {{else}}
          
          {{/if}}
        </span>{{user.username}}</a>
        <a class="btn btn-outline rounded-full text-primary  w-full mt-2" href="/notes/add">ADD Note</a>
      </p>
    </div>
    {{else }}
    <div tabindex="-1" class="dropdown-content mt-4  bg-base-300 rounded-box z-1 p-3 shadow-2xl">
      <a class="btn btn-outline rounded-full text-primary  " href="/users/login">Login</a>
    </div>
    {{/if}}
  </div>

</div>
{{#if user.photo}}
{{else}}
<script>
  const username ="{{user.username}}" ;
  const dp = document.getElementById('dp');
  dp.textContent = username.charAt(0).toUpperCase();
  const dp1 = document.getElementById('dp1');
  dp1.textContent = username.charAt(0).toUpperCase();
</script>
{{/if}}