<div class=" fixed top-0 z-50 navbar opacity-95 md:px-4 justify-between bg-base-300 text-base-content ">
  <div class=" navbar-start  md:gap-2 align-middle">
    <a href="/" class="btn px-1.5 btn-ghost gap-2 shrink-0">
      <img class=" h-8" src="/assets/img/text-logo.png" alt="PostBase logo" />
      <p class="text-3xl {{#unless homepage}}hidden{{/unless}} md:inline font-bold leading-none tracking-tighter">
        <span class="text-green-500 dark:text-green-600">Post</span><span
          class="text-purple-500 dark:text-purple-600">Base</span>
      </p>
    </a>
  </div>
  {{#unless homepage}}
  <div class="navbar-center {{#if post}} w-[50%] sm:w-[30%] {{/if}}" >
    <h1 class=" truncate  text-lg font-bold  sm:text-xl">{{title}}</h1>
  </div>{{/unless}}
  {{#if user}}
  <div class=" navbar-end hidden sm:inline-flex">
    <p>
      <a class="btn rounded-2xl w-max" href="/users/profile/{{user.username}}"><span class=""><img
            class=" bg-pink-200 dark:bg-neutral rounded-full w-8 h-8 " src="/assets/users/photo/{{user.username}}"
            alt="">
        </span>{{user.username}}</a>
    </p>
    <p class="">
      <a class="btn  btn-primary ml-1" href="/posts/add"><span class="h-5" data-feather="edit-2"></span>Create Post</a>
    </p>
  </div>
  {{else }}
  <div class="navbar-end  hidden sm:inline-flex">
    <a class="btn btn-outline rounded-full text-primary  " href="/users/login"><span class="h-5"
        data-feather="log-in"></span>Login</a>
  </div>
  {{/if}}
  <div class="navbar-end dropdown dropdown-end dropdown-bottom sm:hidden">
    <div role="button" tabindex="0" class="btn btn-ghost"><span data-feather="menu"></span></div>
    {{#if user}}
    <div tabindex="-1" class="dropdown-content mt-4 bg-base-300 rounded-box z-1  p-3 shadow-sm">
      <p>
        <a class="btn rounded-2xl w-full" href="/users/profile/{{user.username}}"><span class=""><img
              class="bg-pink-200 dark:bg-neutral rounded-full w-8 h-8 " src="/assets/users/photo/{{user.username}}"
              alt="">
          </span>{{user.username}}</a>
        <a class="btn btn-outline rounded-full text-primary w-max mt-2" href="/posts/add"><span class="h-5"
            data-feather="edit-2"></span>Create Post</a>
      </p>
    </div>
    {{else }}
    <div tabindex="-1" class="dropdown-content mt-4  bg-base-300 rounded-box z-1 p-3 shadow-2xl">
      <a class="btn btn-outline rounded-full text-primary  " href="/users/login"><span class="h-5"
          data-feather="log-in"></span>Login</a>
    </div>
    {{/if}}
  </div>

</div>