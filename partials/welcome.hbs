<dialog id="modal_welcome" class="modal modal-middle">
  <div style="scrollbar-width: thin;" class="modal-box shadow-2xl p-0 border border-base-content/10">

    <div class="bg-primary/20 border-b border-primary/20 text-primary-content px-6 py-10 rounded-t-box">
      <div class="flex items-center flex-col gap-4">
        <div class="flex items-center gap-2 shrink-0">
          <img class="h-16 w-auto" src="/assets/img/text-logo.png" alt="PostBase logo" />
          <h2 class="text-4xl font-bold leading-none tracking-tighter">
            <span class="text-green-500 dark:text-green-600">Post</span><span
              class="text-purple-500 dark:text-purple-600">Base</span>
          </h2>
        </div>
        <p class="text-sm text-center font-medium text-base-content opacity-70">
          Join the community to showcase your ideas. <a class=" link" href="/about-postbase">Learn more</a>
        </p>
      </div>
    </div>

    <div class="p-6 md:p-8 bg-base-100">
      <div class="grid grid-cols-2 gap-4 mb-8">

        <div class="flex items-start gap-3">
          <div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-lg text-green-600">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 1 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
          </div>
          <div>
            <h4 class="text-sm font-bold">Post</h4>
            <p class="text-xs opacity-70">Share your thoughts</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <div class="p-2 bg-purple-100 dark:bg-purple-900/30 rounded-lg text-purple-600">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path
                d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z">
              </path>
            </svg>
          </div>
          <div>
            <h4 class="text-sm font-bold">Engage</h4>
            <p class="text-xs opacity-70">Comment & Like</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <div class="p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg text-blue-600">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="7" height="7"></rect>
              <rect x="14" y="3" width="7" height="7"></rect>
              <rect x="14" y="14" width="7" height="7"></rect>
              <rect x="3" y="14" width="7" height="7"></rect>
            </svg>
          </div>
          <div>
            <h4 class="text-sm font-bold">Explore</h4>
            <p class="text-xs opacity-70">Browse categories</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <div class="p-2 bg-orange-100 dark:bg-orange-900/30 rounded-lg text-orange-600">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="18" cy="5" r="3"></circle>
              <circle cx="6" cy="12" r="3"></circle>
              <circle cx="18" cy="19" r="3"></circle>
              <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
              <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
            </svg>
          </div>
          <div>
            <h4 class="text-sm font-bold">Share</h4>
            <p class="text-xs opacity-70">Grow the base</p>
          </div>
        </div>

      </div>
      <div class="flex flex-col gap-4">
        <a href="/users/oauth/google"
          class="btn btn-outline btn-md hover:bg-gray-200 active:bg-gray-200 dark:hover:bg-[#030304] dark:active:bg-[#030304]  items-center p-6 gap-3 bg-white dark:bg-[#131314] rounded-full border-base-300 ">
          <svg version="1.1" class="h-5.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
            <path fill="#EA4335"
              d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z">
            </path>
            <path fill="#4285F4"
              d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z">
            </path>
            <path fill="#FBBC05"
              d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z">
            </path>
            <path fill="#34A853"
              d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z">
            </path>
          </svg>
          <span class=" lg:text-[0.94rem]">Continue with Google</span>
        </a>
        <p class="text-[12px] text-center opacity-80 italic">New here? An account will be created automatically.</p>
      </div>

      <p class="text-[11px] text-center opacity-70 mt-2">
        By continuing, you agree to the PostBase <a class=" link link-hover underline" href="/terms-of-services">terms of
          service</a>.
      </p>

    </div>
  </div>
  <form class=" modal-backdrop" method="dialog">
    <button>close</button>
  </form>
</dialog>
{{#unless user}}
<script>
  setTimeout(() => {
    document.getElementById("modal_welcome").showModal()
  }, 1000 * 5)
</script>
{{/unless}}