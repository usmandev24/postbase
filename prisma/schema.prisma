generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model notesUsers {
  id          String     @id @unique
  username    String     @unique @db.VarChar(255)
  provider    String     @db.VarChar(255)
  displayName String     @db.VarChar(255)
  fullName    String     @db.VarChar(255)
  photo       Bytes      @db.ByteA
  notes       Notes[]
  comments    comments[]
}

model Notes {
  notekey    String     @id @db.VarChar(255)
  title      String?    @db.VarChar(255)
  body       String?
  autherName String     @db.VarChar(255)
  public     Boolean    @default(true) @db.Boolean
  likes      Int?       @db.Integer
  comments   comments[]
  user       notesUsers @relation(fields: [userid], references: [id])
  userid     String     @db.VarChar(255)
  createdAt  DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime   @updatedAt @db.Timestamptz(6)
}

model comments {
  id          Int        @id @default(autoincrement())
  user        notesUsers @relation(fields: [userid], references: [id])
  userid      String
  body        String     @db.VarChar(1024)
  note        Notes      @relation(fields: [noteNotekey], references: [notekey])
  createdAt   DateTime   @db.Timestamptz(6) @default(now())
  noteNotekey String     @db.VarChar(255)
}

model session {
  sid    String   @id @db.VarChar
  sess   Json     @db.Json
  expire DateTime @db.Timestamp(6)

  @@index([expire], map: "IDX_session_expire")
}
