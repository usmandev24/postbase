generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model notesUsers {
  id              String     @id @unique
  username        String     @unique @db.VarChar(255)
  provider        String     @db.VarChar(255)
  displayName     String     @db.VarChar(255)
  firstName       String?    @db.VarChar(255)
  lastName        String?    @db.VarChar(255)
  email           String?    @db.VarChar(255)
  about           String?    @db.Text
  photo           Bytes?
  photoType       String?    @db.VarChar(255)
  photo_updatedAt DateTime?  @updatedAt @db.Timestamptz(6)
  notes           Notes[]
  comments        comments[]
  sessions        session[]
}

model Notes {
  title     String?    @db.VarChar(255)
  body      String?
  createdAt DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt DateTime   @updatedAt @db.Timestamptz(6)
  likes     Int?
  public    Boolean    @default(true)
  autherId  String     @db.VarChar(255)
  key       String     @id @db.VarChar(255)
  auther    notesUsers @relation(fields: [autherId], references: [id], onDelete: Cascade)
  comments  comments[]
}

model comments {
  id          Int        @id @default(autoincrement())
  body        String     @db.VarChar(1024)
  createdAt   DateTime   @default(now()) @db.Timestamptz(6)
  noteNotekey String     @db.VarChar(255)
  autherId    String
  auther      notesUsers @relation(fields: [autherId], references: [id], onDelete: Cascade)
  note        Notes      @relation(fields: [noteNotekey], references: [key], onDelete: Cascade)
}

model session {
  id     String     @id
  user   notesUsers @relation(fields: [userid], references: [id], onDelete: Cascade)
  userid String
  expire DateTime   @db.Timestamp(6)

  @@index([expire], map: "IDX_session_expire")
}
